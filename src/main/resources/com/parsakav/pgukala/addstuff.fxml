                        <MFXButton fx:id="add" buttonType="RAISED" defaultButton="true" onAction="#addBtnClick" prefHeight="26.0" prefWidth="62.0" rippleAnimationSpeed="0.5" style="-fx-background-color: #8e24aa;" text="Add" textFill="WHITE">
                            <font>
                                <Font size="14.0" />
                            </font>

                        </MFXButton>
                    </children>
                    <VBox.margin>
                        <Insets left="60.0" right="60.0" />
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </children>
