    <children>
        <VBox alignment="CENTER" prefHeight="400.0" prefWidth="310.0" spacing="10" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label prefHeight="35.0" prefWidth="117.0" text="Add Stuff">
                    <font>
                        <Font size="24.0" />
                    </font>
                    <textFill>
                        <LinearGradient endX="1.0" endY="1.0">
                            <stops>
                                <Stop>
                                    <color>
                                        <Color red="0.78847736120224" green="0.20679011940956116" blue="1.0" />
                                    </color>
                                </Stop>
                                <Stop offset="1.0">
                                    <color>
                                        <Color red="0.3558858633041382" green="0.05685510113835335" blue="0.4385964870452881" />
                                    </color>
                                </Stop>
                            </stops>
                        </LinearGradient>
                    </textFill>
                    <VBox.margin>
                        <Insets bottom="1.0" />
                    </VBox.margin>
                </Label>
                <MFXTextField fx:id="name" floatMode="ABOVE" prefHeight="37.0" prefWidth="194.0" promptText="Name">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>

                </MFXTextField>
                <MFXTextField fx:id="price"  prefHeight="37.0" prefWidth="194.0" promptText="Price">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>

                </MFXTextField>
                <MFXTextField fx:id="description" floatMode="ABOVE" prefHeight="163.0" prefWidth="194.0" promptText="Description">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </MFXTextField>
